name 'btrfs-progs'
org 'amylum'

licenses 'COPYING'

deps(
  zlib: {
    version: '1.2.11-1',
    checksum: '5596e2d39ef98e2323ac415f50afa71a433ed65c23e8d1f2723f711f5ffb4f32'
  },
  openssl: {
    version: '1.1.0h-3',
    checksum: 'c9d6db39ea09dd8051cb36c42f85eb8043ce580c6132caa0506a839d88dea275'
  },
  lzo: {
    version: '2.10-1',
    checksum: '67db922b1320bf2856ed8c67a07f433dbab1d410bd1751b81d3909b1d38a578c'
  },
  'linux-api-headers': {
    version: '4.17-1',
    checksum: 'b2526797b346c73dc44da02dc16def8eb2059c02bd015f76497e9babadc1a44f'
  },
  'util-linux': {
    version: '2.32.1-2',
    checksum: '0767cba9699c9fd4af5edb1aa313cf9f5317ec416ef19cb992976d9539384a3c'
  },
  zstd: {
    version: '1.3.5-1',
    checksum: '3d9b492f19c548924cb39a928c02234e5941e492d93b32ff5362a16d1da3e1f1'
  }
)

configure_flags(
  prefix: '/usr',
  'disable-backtrace': nil,
  'disable-convert': nil
)

cflags
harden

patch 'pkgconfig.patch'
patch 'musl-include.patch'

build do
  run './autogen.sh'
  configure "LDFLAGS" => "#{@forge.cflags.join(' ')}", "ZSTD_CFLAGS" => "-I#{dep(:zstd)}/usr/include -L#{dep(:zstd)}/usr/lib", "ZSTD_LIBS" => "-lzstd"
  make
  install
end

