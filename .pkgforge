name 'btrfs-progs'
org 'amylum'

licenses 'COPYING'

deps(
  zlib: {
    version: '1.2.11-6',
    checksum: '7da7212123edac6d5d5dc2db8fb10a6af06472578840c51e489e1f391b66c208'
  },
  openssl: {
    version: '1.1.0i-3',
    checksum: '12cf164859e31f433bfe8ae1533e700cd98dc90f0138e7af202d77db9ad83996'
  },
  lzo: {
    version: '2.10-1',
    checksum: '67db922b1320bf2856ed8c67a07f433dbab1d410bd1751b81d3909b1d38a578c'
  },
  'linux-api-headers': {
    version: '4.19-1',
    checksum: 'de68cab17c2354ee660b269ccca30e275a9314563ebdfb4f427fc5ebe1395f30'
  },
  'util-linux': {
    version: '2.32.1-12',
    checksum: '1f2593e87d50941f57fccab8ea96aff62e88a8f8053e24aabfb3300185b4fd89'
  },
  zstd: {
    version: '1.3.7-1',
    checksum: 'fc41f291fc78385bd5eff939c8fb2936be709cb2cc1ad2e2d18ea34b0df2b906'
  }
)

configure_flags(
  prefix: '/usr',
  'disable-backtrace': nil,
  'disable-convert': nil
)

cflags
harden

patch 'pkgconfig.patch'
patch 'musl-include.patch'

build do
  run './autogen.sh'
  configure "LDFLAGS" => "#{@forge.cflags.join(' ')}", "ZSTD_CFLAGS" => "-I#{dep(:zstd)}/usr/include -L#{dep(:zstd)}/usr/lib", "ZSTD_LIBS" => "-lzstd"
  make
  install
end

test do
  # TODO: add tests
end
