name 'btrfs-progs'
org 'amylum'

licenses 'COPYING'

deps(
  zlib: {
    version: '1.2.11-1',
    checksum: '5596e2d39ef98e2323ac415f50afa71a433ed65c23e8d1f2723f711f5ffb4f32'
  },
  openssl: {
    version: '1.1.0g-1',
    checksum: 'f70d94ca94f05be4a14438cf29ed4695d9731d023a4b72d30126d826720bc48b'
  },
  lzo: {
    version: '2.10-1',
    checksum: '67db922b1320bf2856ed8c67a07f433dbab1d410bd1751b81d3909b1d38a578c'
  },
  'linux-api-headers': {
    version: '4.14-1',
    checksum: '106c40ebd4826cf8fda5235cb9619e37d79efea6e64545d64bb78d4a829f29a6'
  },
  'util-linux': {
    version: '2.31.1-3',
    checksum: '12ca6835eed12560b6e6f98d5c854f91cbf803e4e5c203a6d083a7c304df248c'
  },
  zstd: {
    version: '1.3.3-1',
    checksum: 'ddf75ae9df6f552d36f12742766b5a1f92452a7dc8c79e77389869185a1e2037'
  }
)

configure_flags(
  prefix: '/usr',
  'disable-backtrace': nil,
  'disable-convert': nil
)

cflags
harden

patch 'pkgconfig.patch'

build do
  run './autogen.sh'
  configure "LDFLAGS" => "#{@forge.cflags.join(' ')}", "ZSTD_CFLAGS" => "-I#{dep(:zstd)}/usr/include -L#{dep(:zstd)}/usr/lib", "ZSTD_LIBS" => "-lzstd"
  make
  install
end

