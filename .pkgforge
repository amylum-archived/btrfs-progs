name 'btrfs-progs'
org 'amylum'

licenses 'COPYING'

deps(
  zlib: {
    version: '1.2.11-6',
    checksum: '7da7212123edac6d5d5dc2db8fb10a6af06472578840c51e489e1f391b66c208'
  },
  openssl: {
    version: '1.1.0i-2',
    checksum: 'bdfcd530e741ab1e20e3996463847a851e7ecdb509b7cb227218fb6e96eb0cac'
  },
  lzo: {
    version: '2.10-1',
    checksum: '67db922b1320bf2856ed8c67a07f433dbab1d410bd1751b81d3909b1d38a578c'
  },
  'linux-api-headers': {
    version: '4.18-1',
    checksum: 'edc8dab0e57cb3868867a86d501eb5f314ad00d87e50957c3ffae113ce967298'
  },
  'util-linux': {
    version: '2.32.1-8',
    checksum: '1360d18a98e042cb70cb477adecac3b079ecc6b58b29329d82c54d6f8f101418'
  },
  zstd: {
    version: '1.3.5-3',
    checksum: '5401aa2b28eaae6983e46e640ae003d9ae283920132d2d2bbea4e31c3eabf585'
  }
)

configure_flags(
  prefix: '/usr',
  'disable-backtrace': nil,
  'disable-convert': nil
)

cflags
harden

patch 'pkgconfig.patch'
patch 'musl-include.patch'

build do
  run './autogen.sh'
  configure "LDFLAGS" => "#{@forge.cflags.join(' ')}", "ZSTD_CFLAGS" => "-I#{dep(:zstd)}/usr/include -L#{dep(:zstd)}/usr/lib", "ZSTD_LIBS" => "-lzstd"
  make
  install
end

