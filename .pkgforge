name 'btrfs-progs'
org 'amylum'

licenses 'COPYING'

deps(
  zlib: {
    version: '1.2.11-1',
    checksum: '5596e2d39ef98e2323ac415f50afa71a433ed65c23e8d1f2723f711f5ffb4f32'
  },
  openssl: {
    version: '1.1.0g-2',
    checksum: 'de874867ea234470f6bc1969f6edaf6494e8b8e9f85c108b4db638cda3888241'
  },
  lzo: {
    version: '2.10-1',
    checksum: '67db922b1320bf2856ed8c67a07f433dbab1d410bd1751b81d3909b1d38a578c'
  },
  'linux-api-headers': {
    version: '4.15-2',
    checksum: 'dbfe68e7620b09fe2996d83fe4ae738dddb2486885b9d5ef3dc27ae77d7585ba'
  },
  'util-linux': {
    version: '2.32-5',
    checksum: '354d75c0c1d59f388e425bbc23c2fd35890ab6490bd2d24afb8540cff30e2a50'
  },
  zstd: {
    version: '1.3.3-1',
    checksum: 'ddf75ae9df6f552d36f12742766b5a1f92452a7dc8c79e77389869185a1e2037'
  }
)

configure_flags(
  prefix: '/usr',
  'disable-backtrace': nil,
  'disable-convert': nil
)

cflags
harden

patch 'pkgconfig.patch'
patch 'musl-include.patch'

build do
  run './autogen.sh'
  configure "LDFLAGS" => "#{@forge.cflags.join(' ')}", "ZSTD_CFLAGS" => "-I#{dep(:zstd)}/usr/include -L#{dep(:zstd)}/usr/lib", "ZSTD_LIBS" => "-lzstd"
  make
  install
end

